# .env
# This file stores local and sensitive configuration. 
# It is excluded from version control (.gitignore).

# --- LLM Configuration (Ollama) ---
# Ensure your Ollama server is running and the model is pulled.
OLLAMA_MODEL_NAME="llama3"
OLLAMA_BASE_URL = "http://host.docker.internal:11434"

# --- Vector Database (ChromaDB) ---
# Path where the persistent ChromaDB data will be stored locally (Only used if CHROMA_DB_MODE=local)
CHROMA_DB_PATH="/tmp/financial_chroma_test"

# CRITICAL NEW VARIABLES FOR SERVER MODE
# Set to 'remote' to use the HttpClient connection mode
CHROMA_DB_MODE=remote
# The address of the Chroma server when run on the host machine
CHROMA_DB_URL=http://localhost:8000

CHROMA_COLLECTION_NAME="financial_news_dedup"
CHROMA_RAG_COLLECTION_NAME="financial_news_rag"

# --- RAG and Deduplication Thresholds ---
DEDUPLICATION_SIMILARITY_THRESHOLD=0.95 

# --- NER Model Configuration ---
SPACY_MODEL_NAME="en_core_web_md"
# --- External API Keys (Optional) ---
# NEWS_API_KEY=""